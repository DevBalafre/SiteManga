{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="{{asset('assets/css/crud.css')}}">
{% endblock %}
{% block body %}

<div class="manga">
    <div class="col-md-6">
        <h2>Modifier votre profile</h2>
        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.pseudo) }}
            {{ form_widget(form.pseudo) }}
            <div class="form-error">
                {{ form_errors(form.pseudo) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.emaail) }}
            {{ form_widget(form.emaail) }}
            <div class="form-error">
                {{ form_errors(form.emaail) }}
            </div>
        </div>


        <div class="form-group">
            {{ form_label(form.password) }}
            {{ form_widget(form.password) }}
            <div class="form-error">
                {{ form_errors(form.password) }}
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}